{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@dotbot/core": ["lib/dotbot-core"],
      "@dotbot/core/*": ["lib/dotbot-core/*"],
      "@dotbot/express": ["lib/dotbot-express/src"],
      "@dotbot/express/*": ["lib/dotbot-express/src/*"]
    }
  },
  "include": ["src/**/*", "../lib/**/*"],
  "exclude": ["node_modules", "dist", "../lib/**/tests", "../lib/**/*.test.ts"]
}
