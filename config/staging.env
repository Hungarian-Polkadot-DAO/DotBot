# Staging Environment Configuration
# Copy this file to .env on your server

NODE_ENV=staging
DEBUG=false
LOG_LEVEL=INFO

# Domain Configuration
DOMAIN_NAME=sandbox.dotbot.zelmacorp.io
ACME_EMAIL=admin@company.com

# Database Configuration
POSTGRES_DB=dotbot_staging
POSTGRES_USER=dotbot
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://dotbot:change_me_in_production@postgres:5432/dotbot_staging

# Redis Configuration
REDIS_URL=redis://redis:6379

# Agent Configuration (Required)
ASI_ONE_API_KEY=your_asi_one_api_key_here
ASI_ONE_ENDPOINT=https://agentverse.ai/api/v1

# Security
SESSION_SECRET=change_me_to_random_string

# Application URLs
FRONTEND_URL=https://sandbox.dotbot.zelmacorp.io
BACKEND_URL=https://sandbox.dotbot.zelmacorp.io/api

# Feature Flags for Staging
ENABLE_BACKEND_MEMORY=true
ENABLE_BACKEND_PAYMENTS=false
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=true

# CORS Configuration
CORS_ORIGINS=https://sandbox.dotbot.zelmacorp.io
